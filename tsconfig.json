{
  "compilerOptions": {
    "target": "es2017",                                  
    "lib": ["ES6"],                                      
    "module": "commonjs",                                
    "rootDir": "./",                                  
    "outDir": "./",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                     
    "skipLibCheck": true                                 
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"]
}
